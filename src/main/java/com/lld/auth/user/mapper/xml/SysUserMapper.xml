<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lld.auth.user.mapper.SysUserMapper">

    <resultMap id="BaseResultMap" type="com.lld.auth.user.entity.SysUser">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="passWord" column="pass_word" jdbcType="VARCHAR"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="phoneNumber" column="phone_number" jdbcType="VARCHAR"/>
        <result property="loginDate" column="login_date" jdbcType="TIMESTAMP"/>
        <result property="status" column="status" jdbcType="CHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="remark" column="remark" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id
        ,user_name,pass_word,encoder_type,
        avatar,email,phone_number,
        login_date,status,create_time,
        update_time,remark
    </sql>


    <select id="getByUserName" resultType="com.lld.auth.user.entity.SysUser" parameterType="string">
        select
        <include refid="Base_Column_List"/>
        from sys_user
        where user_name = #{userName}
    </select>

    <select id="getCountUserName" resultType="integer" parameterType="string">
        select
        count(*)
        from sys_user
        where user_name = #{userName}
    </select>

    <insert id="insertSingle" parameterType="com.lld.auth.user.entity.SysUser">
        insert into sys_user(user_name, pass_word, email, status, create_time, update_time, remark)
        values (
                #{sysUser.userName},
                #{sysUser.passWord},
                #{sysUser.email},
                #{sysUser.status},
                #{sysUser.createTime},
                #{sysUser.updateTime},
                #{sysUser.remark}
                )
    </insert>

    <update id="updateLoginDate"  >
        update
            sys_user
        set login_date = #{loginDate}
        where id = #{id}
    </update>

</mapper>
